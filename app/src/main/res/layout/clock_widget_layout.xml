<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/custom_clock_widget"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="@dimen/clock_margin"
  android:gravity="center">

  <AnalogClock
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/AnalogClock0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:dial="@drawable/dial_220"
    android:hand_hour="@drawable/hours_hand"
    android:hand_minute="@drawable/minutes_hand" />
  <ImageView
    android:id="@+id/ivSecondHand"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/minutes_hand"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:rotation="360"
    />


</RelativeLayout>